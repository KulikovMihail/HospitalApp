<Window x:Class="HospitalApp.AddMedicationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить препарат" Height="300" Width="400">
    <Grid>
        <Label Content="Название препарата:" Margin="10"/>
        <TextBox x:Name="txtName" Margin="140,10,10,0" VerticalAlignment="Top"/>

        <Label Content="Дозировка:" Margin="10,40,10,0"/>
        <TextBox x:Name="txtDosage" Margin="140,40,10,0" VerticalAlignment="Top"/>

        <Label Content="Количество:" Margin="10,70,10,0"/>
        <TextBox x:Name="txtStock" Margin="140,70,10,0" VerticalAlignment="Top"/>

        <Button Content="Добавить" Margin="10,120,10,0" VerticalAlignment="Top" Click="btnAdd_Click"/>
    </Grid>
</Window>