<Window x:Class="HospitalApp.AddEmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить сотрудника" Height="300" Width="400">
    <Grid>
        <Label Content="Имя:" Margin="10"/>
        <TextBox x:Name="txtFirstName" Margin="51,10,10,0" VerticalAlignment="Top"/>

        <Label Content="Фамилия:" Margin="10,40,10,0"/>
        <TextBox x:Name="txtLastName" Margin="85,40,10,0" VerticalAlignment="Top"/>

        <Label Content="Номер телефона:" Margin="10,70,10,0"/>
        <TextBox x:Name="txtPhoneNumber" Margin="117,70,10,0" VerticalAlignment="Top"/>

        <Label Content="Должность:" Margin="10,100,10,0"/>
        <TextBox x:Name="txtPosition" Margin="85,100,10,0" VerticalAlignment="Top"/>

        <Label Content="Почта:" Margin="10,123,10,-23"/>
        <TextBox x:Name="txtEmail" Margin="68,124,27,0" VerticalAlignment="Top"/>

        <Button Content="Добавить" Margin="10,157,10,0" VerticalAlignment="Top" Click="btnAdd_Click"/>
    </Grid>
</Window>