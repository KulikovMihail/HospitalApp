<Page x:Class="HospitalApp.EmployeesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Сотрудники">

    <Grid>
        <DataGrid x:Name="dgEmployees" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Имя" Binding="{Binding FirstName}"/>
                <DataGridTextColumn Header="Фамилия" Binding="{Binding LastName}"/>
                <DataGridTextColumn Header="Номер телефона" Binding="{Binding PhoneNumber}"/>
                <DataGridTextColumn Header="Должность" Binding="{Binding Position}"/>
            </DataGrid.Columns>
        </DataGrid>

        <Button Content="Добавить" Click="btnAdd_Click" />
        <Button Content="Редактировать" Click="btnEdit_Click" />
        <Button Content="Удалить" Click="btnDelete_Click" />
    </Grid>
</Page>