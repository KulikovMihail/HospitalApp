<Window x:Class="HospitalApp.EditPatientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактировать пациента" Height="350" Width="400">
    <Grid>
        <Label Content="Имя:" Margin="10"/>
        <TextBox x:Name="txtName" Margin="70,10,10,0" VerticalAlignment="Top"/>

        <Label Content="Фамилия:" Margin="10,40,10,0"/>
        <TextBox x:Name="txtSurname" Margin="70,40,10,0" VerticalAlignment="Top"/>

        <Label Content="Дата рождения:" Margin="10,70,10,0"/>
        <DatePicker x:Name="dpBirthDate" Margin="107,70,10,0" VerticalAlignment="Top"/>

        <Label Content="Диагноз:" Margin="10,100,10,0"/>
        <TextBox x:Name="txtDiagnosis" Margin="70,100,10,0" VerticalAlignment="Top"/>

        <Label Content="Лечащий врач:" Margin="10,121,10,-21"/>
        <ComboBox x:Name="cmbDoctors" DisplayMemberPath="FullName" SelectedValuePath="Id" Margin="107,123,10,192" />

        <Button Content="Сохранить" Margin="10,0,10,0" VerticalAlignment="Center" Click="btnSave_Click"/>
    </Grid>
</Window>